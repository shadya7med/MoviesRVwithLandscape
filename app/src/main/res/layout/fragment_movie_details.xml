<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="@string/movie_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/release_year"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/rating"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/genre"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/txtView_movieName_movieDetails"
        android:layout_width="244dp"
        android:layout_height="26dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/movie_name" />

    <TextView
        android:id="@+id/txtView_movieReleaseYear_movieDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/txtView_movieName_movieDetails"
        app:layout_constraintTop_toBottomOf="@+id/txtView_movieName_movieDetails"
        tools:text="@string/release_year" />

    <TextView
        android:id="@+id/txtView_movieGenre_movieDetails"
        android:layout_width="75dp"
        android:layout_height="19dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/rtBar_movieRating_movieDetails"
        app:layout_constraintTop_toBottomOf="@+id/rtBar_movieRating_movieDetails"
        tools:text="@string/genre" />

    <ImageView
        android:id="@+id/imgView_movieImage_movieDetails"
        android:layout_width="314dp"
        android:layout_height="259dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtView_movieGenre_movieDetails"
        tools:srcCompat="@tools:sample/avatars" />

    <RatingBar
        android:id="@+id/rtBar_movieRating_movieDetails"
        android:layout_width="237dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@+id/txtView_movieReleaseYear_movieDetails"
        app:layout_constraintTop_toBottomOf="@+id/txtView_movieReleaseYear_movieDetails" />

</androidx.constraintlayout.widget.ConstraintLayout>